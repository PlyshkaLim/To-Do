// Присутствие файла "tsconfig.json" в папке указывает TypeScript, что это корневая папка проекта.

{
  "compilerOptions": {
    // Конечная папка, куда будут помещаться собранные артефакты.
    //"outDir": "./dist/",
    // Показывать ошибку, если где-то задан тип "any".
    "noImplicitAny": true,
    // Модульная система, которую будет использовать собранное приложение.
    //"module": "es6",
    // Версия стандарта ECMAScript, в которую будет скомпилирован код
    //"target": "es5",
    // Включать ли поддержку ".tsx" файлов?
    "jsx": "react",
    // Разрешать компилировать файлы с JavaScript-кодом?
    "allowJs": true,
    // Определить способ поиска модулей в папках: как в Node.js или классический, как в TypeScript 1.5 и ниже.
    "moduleResolution": "node",
    // Создавать ли соответствующие source map файлы ".map"?
    //"sourceMap": true
  }
}