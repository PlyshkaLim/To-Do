{
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "react",
    "prettier",
    "simple-import-sort"
  ],
  "rules": {
    //  Подсвечивает ошибки из Prettier.
    "prettier/prettier": "error",
    // ; и , в конце
    "semi": "error",
    // Запретить использование необъявленных переменных
    "no-undef": 0,
    // запрет неиспользуемых переменных
    "no-unused-vars": 0,
    // sort import
    "simple-import-sort/sort": "error",
    // Make sure to remove or disable other sorting rules, such as sort-imports and import/order.
    "sort-imports": 0,
    "import/order": 0
  }
}
