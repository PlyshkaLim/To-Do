{
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    //  Подсвечивает ошибки из Prettier.
    "prettier/prettier": "error",
    // ; и , в конце
    "semi": "error",
    // Запретить использование необъявленных переменных
    "no-undef": 0,
    // запрет неиспользуемых переменных
    "no-unused-vars": 0
  }
}
